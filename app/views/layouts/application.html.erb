<!DOCTYPE html>
<html>
  <head>
    <title>DemoApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>
    
    <div class="header-menu">
      <%= link_to root_path do %>
          <h1>| でもあぷり |</h1>
      <% end %>
      <ul>
        <% if logged_in? %>
        <li><%= link_to "| | みんなのとうこう |", topics_path %></li>
        <li><%= link_to "| | おきにいり |", favorites_index_path %></li>
        <li><%= link_to "| あっぷろーど |", new_topic_path %></li>
        <li><%= link_to "| ろぐあうと | |", logout_path, method: :delete %></li>
        <% else %>
        <li><%= link_to "| | さいんあっぷ |", new_user_path %></li>
        <li><%= link_to "| ろぐいん |",       login_path  %></li>
        <li><%= link_to "| つかいかた | |",   homes_about_path %></li>
        <% end %>
      </ul>
    </div>
    <%= yield %>
    
    <script>
      $(function(){
        $(".alert").fadeOut(5000);
      });
    </script>
  </body>
</html>
